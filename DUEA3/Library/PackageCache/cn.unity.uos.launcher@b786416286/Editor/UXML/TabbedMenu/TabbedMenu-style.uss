/* Style for tabs */
#tabs {
    flex-direction: row;
    -unity-font-style: bold;
    height: 33px;
}

/* Sets each label in tabs to have the same size. */
.tab {
    background-color: var(--launcher-background-main);
    flex-grow:1;
    -unity-text-align: middle-center;
    font-size: 12px;
    border-bottom-width: 1px;
    border-color: var(--launcher-border);
}

/* Adds background color for the selected tab */
.currentlySelectedTab {
    border-bottom-width: 2px;
    border-color: var(--launcher-highlight);
}

/* Style for tabContent */
#tabContent, .tabContent {
    background-color: var(--launcher-background-secondary);
}
/* Hides the unselected tab content */
.unselectedContent {
    display: none;
}
